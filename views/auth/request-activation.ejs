<% layout('auth/index') %>
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div>
                        <%- include('../layouts/partials/alert') %>
                    </div>

                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>Request Link Activated</h4>
                        </div>

                        <div class="card-body">
                            <p class="text-muted">We will send a link to activated your account</p>
                            <form action="/request-activation" method="POST">
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" name="email" id="email" class="form-control" required />
                                </div>
                                <button type="submit" class="btn btn-primary">Request Activation Link</button>
                            </form>
                        </div>
                    </div>
                    <div class="simple-footer">
                        Copyright &copy; Stisla <%= new Date().getFullYear() %>
                    </div>
                </div>
            </div>
        </div>
    </section>